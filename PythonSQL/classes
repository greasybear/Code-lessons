class Movie:
    def __init__(self, name, genre):
        self.name = name
        self.genre = genre
    def __repr__(self):
        return "<Movie {}>".format(self.name)
     
class User:
    def __init__(self, name):
        self.name=name
        self.movies = []
    def __repr__(self):
        return "<User {}>".format(self.name)

    # def watchedIt(self):         this uses a for loop to add movies to the list based on boolean
    #     watchedMovies= []
    #     for movie in self.movies:
    #         if movie.watched == True:
    #             watchedMovies.append(movie)
    #     return watchedMovies
    def watchedIt(self):              # here we use the filter method to return if its watched
        watchedMovies= list(filter(lambda x: x.watched, self.movies))   #this filters non-watched movies, then converts
        return watchedMovies       

user = User('Andrew')

myMovie= Movie('The Matrix', 'Sci-Fi', False)
secondMovie=Movie('Waterworld', 'Action', True)

user.movies.append(myMovie)
user.movies.append(secondMovie)


print(user.watchedIt())
